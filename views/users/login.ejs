<% layout('layouts/boilerplate') %>

<div class="row justify-content-center align-items-center mt-5">
    <div class="col-md-6 col-xl-4">
        <div class="card shadow">
            <img src="https://res.cloudinary.com/duzrj6fgt/image/upload/c_thumb,w_600,g_face/v1665495333/YelpCamp/scott-goodwill-y8Ngwq34_Ak-unsplash_zmotqx.jpg" 
            alt="Camping in forest" class="card-img-top">
            <div class="card-body">
                <h5 class="card-title">Login</h5>
                <form action="/login" method="POST" class="validated-form" novalidate>
                    <div class="mb-3">
                        <label class="form-label" for="username">Username</label>
                        <input class="form-control" type="text" id="username" name="username" autofocus required>
                        <div class="valid-feedback">
                            Looks good!
                        </div>
                    </div>
                    <div class="mb-3">
                        <label class="form-label" for="password">Password</label>
                        <input class="form-control" type="password" id="password" name="password" required>
                        <div class="valid-feedback">
                            Looks good!
                        </div>
                    </div>
                    <div class="d-grid gap-2">
                        <button class="btn btn-success">Login</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>